{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noImplicitAny": false,
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "declaration": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}